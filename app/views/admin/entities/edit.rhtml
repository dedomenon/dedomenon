<h1><%= t("madb_edit_entity",{ :vars => { 'entity' => @entity }})%></h1>

<%= help_info("madb_help_info_admin_entities_edit")%>
<% form_tag :action => 'update', :id => @entity do -%>
  <%= render :partial => "form" %>
  <%= submit_tag t("madb_submit") %>  
  <!-- See admin/details/new.rhtml for the details regarding the
       gaurding conditions. 
  -->
<%if session["return-to"] %>
  <%=link_to t("madb_cancel"),session["return-to"] %>
  <% end %>
<% end -%>


